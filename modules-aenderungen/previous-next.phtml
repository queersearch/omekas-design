    <?php else: ?>
        <?= $hyperlink('', '#', ['class' => 'button', 'rel' => 'prev', 'title' => $translate('No previous resource'), 'disabled' => 'disabled', 'style' => 'color:gray;pointer-events:none;', 'tabindex' => '-1']) ?>
    <?php endif; ?>
