        <?php else: ?>
            <?= $hyperlink('^', '#', ['class' => 'button', 'rel' => 'search', 'title' => $translate('Back to last search'), 'disabled' => 'disabled', 'style' => 'color:gray;pointer-events:none;', 'tabindex' => '-1']) ?>
        <?php endif; ?>
    <?php endif; ?>
    */ ?>
    <?php if ($next): ?><!-- MEINE ERGÄNZUNG -->&nbsp;&nbsp;nächstes Objekt&nbsp;&nbsp;</span>
        <?= $hyperlink('', $next->siteUrl(), ['class' => 'button', 'rel' => 'next', 'title' => $translate('Next resource')]) ?>
    <?php else: ?>
        <?= $hyperlink('', '#', ['class' => 'button', 'rel' => 'next', 'title' => $translate('No next resource'), 'disabled' => 'disabled', 'style' => 'color:gray;pointer-events:none;', 'tabindex' => '-1']) ?>
    <?php endif; ?>
</div>
